extends layout

block content
  for book_to_edit in title
    p
    p EDIT BOOK
    p
    form(class='form-group' action='/books/#{book_to_edit.id}?_method=PUT' method='post')
      label(for=('title')) Title: 
      p
        input(class='form-control' type='text' id='title' name='title' value='#{book_to_edit.title}')
      
      label(for=('genre')) Genre: 
      p
        input(class='form-control' type='text' id='genre' name='genre' value='#{book_to_edit.genre}')
      
      label(for=('description')) Description: 
      p
        textarea(class='form-control' id='description' name='description') #{book_to_edit.description}
      
      label(for=('url')) URL:
      p
        input(class='form-control' type='text' id='url' name='url' value='#{book_to_edit.url}')
      
      p
        input(class='btn' type='submit' value='change book')
