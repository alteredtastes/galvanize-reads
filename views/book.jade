extends layout

block content
  for book_entry in title
    table
      tr
        td
          form(action='/books/#{book_entry.id}/edit', method='get')
            input(type='submit', value='edit')
          form(action='/books/#{book_entry.id}/remove', method='get')
            input(type='submit', value='remove')
      tr
        td #{book_entry.title}
      tr
        td #{book_entry.genre}
      tr
        td #{book_entry.description}
      tr
        td
          img.home-images(src='#{book_entry.url}', alt='#{book_entry.id}')
          
        
