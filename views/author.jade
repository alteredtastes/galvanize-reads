extends layout

block content
  for author_entry in author
    table
      tr
        td
          form(action='path', method='put')
            input(type='button', value='edit')
          form(action='path', method='delete')
            input(type='button', value='remove')
      tr
        td #{author_entry.first} #{author_entry.last}
      tr
        td #{author_entry.bio}
      tr
        td 
          img(src='#{author_entry.url}', alt='#{author_entry.id}')
