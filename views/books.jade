extends layout

block content
  p 
    h3 BOOKS
    for book_entries in titles
      table
        tr
          td
            form(action='/books/#{book_entries.id}/edit' method='get')
              input(class='btn btn-sm' type='submit', value='edit')
            form(action='/books/#{book_entries.id}/remove' method='get')
              input(class='btn btn-sm' type='submit', value='remove')
        tr
          td 
            h4
              a(href='/books/#{book_entries.id}') #{book_entries.title}
        tr
          td #{book_entries.genre}
        tr
          td #{book_entries.description}
        tr
          td
            img.home-images(src='#{book_entries.url}', alt='#{book_entries.id}')
